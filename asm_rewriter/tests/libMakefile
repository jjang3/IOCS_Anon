SHELL           = /bin/zsh
CC              = gcc
LIBFLAGS	    = -Wall -fPIC -shared
LIBLDFLAGS      = -ldl -mfsgsbase
LIBTARGET       = table.so

lib: $(LIBTARGET)
		echo $(PWD)
		if [ ! -d $(PWD)/lib ]; then mkdir -p $(PWD)/lib; fi
		mv $(LIBTARGET) $(PWD)/lib

$(LIBTARGET): 
		$(CC) $(LIBFLAGS) table.c -o $@ $(LIBLDFLAGS)